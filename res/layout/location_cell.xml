<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/location_cell_shape"
    android:clickable="true"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/location_cell_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/location_cell_top_text_size"
        android:textStyle="bold"
        android:textColor="@drawable/location_cell_text_selector"
        android:drawableLeft="@drawable/location_cell_left_selector" />

    <TextView
        android:id="@+id/location_cell_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="@dimen/location_cell_middle_text_size"
        android:textStyle="bold"
        android:textColor="@drawable/location_cell_text_selector" />

</LinearLayout>
